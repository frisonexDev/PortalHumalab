<script src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.full.min.js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" />

<div class="container-fluid bg-white rounded-3 mt-3">

    <div class="row d-flex p-3 justify-content-start">

        <div class="col-12">

            <div class="d-flex align-items-center gap-2">
                
                <select class="form-control" id="select-pruebas" data-placeholder="Buscar Cliente" onchange="SelectTable()">
                    <option>
                    </option>
                </select>
                <a class="btn text-decoration-none  p-2 rounded-1 bg-primary" onclick="consultarPedidos()" id="cliente"><i class="fa-solid fa-magnifying-glass" style="margin-right:3px; color:#F4F4F2"></i></a>
            </div>
          <input hidden id="txtCliente" class="form-control" placeholder="Cliente" type="search" />



        </div>
    </div>
    <div class="row d-flex p-3 justify-content-start">
        <div class="col-6">
                  
            <div class="d-flex col gap-3 align-items-around">

                <span class="fw-bold">Desde</span>
                <span><input id="dtpFchDes" class="form-control" type="date" /></span>

                <span class="fw-bold">Hasta</span>
                <span><input id="dtpFchHas" class="form-control" type="date" /></span>


            </div>
            <br />
            <div class="d-flex col gap-3 justify-content-start">
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" @* onclick="obtenerEstados()" *@ name="inlineRadioOptions" id="inlineRadio1" value="@ViewBag.Validadas" @* value="31" *@ data-name="Validadas" checked>
                    <label class="form-check-label fw-bold" for="inlineRadio1">Validadas</label>
                </div>

                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" @* onclick="obtenerEstados()" *@ name="inlineRadioOptions" id="inlineRadio2" value="@ViewBag.Facturadas" @* value="32" *@ data-name="Facturadas">
                    <label class="form-check-label fw-bold" for="inlineRadio2">Facturadas</label>
                </div>
            </div>


        </div>
          
          
    </div>

    <div class="row d-flex align-items-center gap-2 mt-2">
        <span id="nomCliente"></span>       
    </div>

</div>



<script>

    $('#select-pruebas').select2({
        theme: "bootstrap-5",
        width:'80%',// $(this).data('width') ? $(this).data('width') : $(this).hasClass('w-100%') ? '100%' : 'style',
        placeholder: $(this).data('placeholder'),
        selectOnClose: true,
    });


</script>