<input id="notyf-message2" name="notyf-message2" type="text" class="form-control" hidden value="Proceso ejecutado correctamente">

<script>

    // Notyf
    document.addEventListener("DOMContentLoaded", function () {

        document.querySelector("#notyf-show-succes").addEventListener("click", function () {
            var message = document.querySelector("#notyf-message2").value;
            var type = "success";
            var duration = 2500;
            var ripple = true;
            var dismissible = false;
            var positionX = "right";
            var positionY = "top";
            window.notyf.open({
                type,
                message,
                duration,
                ripple,
                dismissible,
                position: {
                    x: positionX,
                    y: positionY
                }
            });
        });
    });



</script>