@using GDifare.Portal.Humalab.Seguridad.Modelos;
@using Newtonsoft.Json;
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    ObjUsuario usuario = JsonConvert.DeserializeObject<ObjUsuario>
        (HttpContextAccessor.HttpContext.Session.GetString("usuario"));
}

<div class="container-fluid bg-white rounded-3 mt-3 p-3">

    <div class="d-flex justify-content-start align-items-start mb-2">

        <h3 class="text-start text-primary">Facturación</h3>

    </div>


    <div class="card">
        <div class="card-body">
            <canvas id="barChart"></canvas>
        </div>
    </div>
</div>


<script>

    function graficoBarrasFactura(){

        var ruc = '@usuario!.Identificacion'; //idUsuario administrador
        var pagado;
        var vencida;
        var porvencer;

        $.ajax({
            url: '@Url.Action("FacturacionEstadosFlexline","GestionCliente")',
            type: 'GET',
            data: { Identificacion: ruc },            
            success: function (response){

                for (var i = 0; i < response.length; i++) {
                    //console.log(response);

                    //por dias vencidos
                    //si viene un valor -2 por ejemplo es que esta por vencer                   

                    //si viene un valor 1, 2 o mas es que esta vencido

                    //no vencido es decir pagado
                    if (response[i].valorPorVencer === null || response[i].valorPorVencer === "") {
                        pagado = response[i].valorVencido;                        
                    }
                    else{
                        //vencido o por vencer
                        vencida = response[i].valorVencido;
                        porvencer = response[i].valorVencido;                        
                    }

                    var ctxB = document.getElementById("barChart").getContext('2d');
                    var myBarChart = new Chart(ctxB, {
                        type: 'bar',
                        data: {
                            labels: ["Lunes", "Martes", "Miércoles", "Jueves", "Viernes", "Sábado"],
                            datasets:
                                [
                                    {
                                        label: 'PAGADA',
                                        data: [pagado],
                                        backgroundColor: [
                                            'rgba(255, 99, 132, 0.8)',
                                            'rgba(255, 99, 132, 0.8)',
                                            'rgba(255, 99, 132, 0.8)',
                                            'rgba(255, 99, 132, 0.8)',
                                            'rgba(255, 99, 132, 0.8)',
                                            'rgba(255, 99, 132, 0.8)'
                                        ],
                                        borderColor: [
                                            'rgba(255,99,132,1)',
                                            'rgba(255,99,132,1)',
                                            'rgba(255,99,132,1)',
                                            'rgba(255,99,132,1)',
                                            'rgba(255,99,132,1)',
                                            'rgba(255,99,132,1)'
                                        ],
                                        borderWidth: 1
                                    },
                                    {
                                        label: 'POR VENCER',
                                        data: [porvencer],
                                        backgroundColor: [
                                            'rgba(13,110,253,0.8)',
                                            'rgba(13,110,253,0.8)',
                                            'rgba(13,110,253,0.8)',
                                            'rgba(13,110,253,0.8)',
                                            'rgba(13,110,253,0.8)',
                                            'rgba(13,110,253,0.8)'
                                        ],
                                        borderColor: [
                                            'rgba(54, 162, 235, 0.8)',
                                            'rgba(54, 162, 235, 0.8)',
                                            'rgba(54, 162, 235, 0.8)',
                                            'rgba(54, 162, 235, 0.8)',
                                            'rgba(54, 162, 235, 0.8)',
                                            'rgba(54, 162, 235, 0.8)'
                                        ],
                                        borderWidth: 1
                                    },
                                    {
                                        label: 'VENCIDA',
                                        data: [vencida],
                                        backgroundColor: [
                                            'rgba(13,110,253,0.8)',
                                            'rgba(13,110,253,0.8)',
                                            'rgba(13,110,253,0.8)',
                                            'rgba(13,110,253,0.8)',
                                            'rgba(13,110,253,0.8)',
                                            'rgba(13,110,253,0.8)'
                                        ],
                                        borderColor: [
                                            'rgba(54, 162, 235, 0.8)',
                                            'rgba(54, 162, 235, 0.8)',
                                            'rgba(54, 162, 235, 0.8)',
                                            'rgba(54, 162, 235, 0.8)',
                                            'rgba(54, 162, 235, 0.8)',
                                            'rgba(54, 162, 235, 0.8)'
                                        ],
                                        borderWidth: 1
                                    }
                                ],

                        },
                        options: {
                            scales: {
                                yAxes: [{
                                    ticks: {
                                        beginAtZero: true
                                    }
                                }]
                            }
                        }
                    });
                }

            }
        });
    }


    //bar   
    graficoBarrasFactura();

</script>